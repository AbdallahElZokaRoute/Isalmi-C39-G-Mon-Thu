<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".islamiApp.activities.TasbeehActivity"
	>

	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/guideline"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintGuide_percent=".15"
		/>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/seb7a"
		android:layout_width="210dp"
		android:layout_height="220dp"
		app:layout_constraintTop_toBottomOf="@+id/guideline"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:rotation="0"
		>
		<ImageView
			android:id="@+id/head_seb7a"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toTopOf="@id/body_seb7a"
			android:layout_marginStart="30dp"
			android:layout_marginTop="35dp"
			android:src="@drawable/head_of_seb7a"
			android:adjustViewBounds="true"
			app:layout_constraintWidth_percent=".28"
			/>
		<ImageView
			android:id="@+id/body_seb7a"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="6dp"
			android:src="@drawable/body_of_seb7a"
			android:adjustViewBounds="true"
			app:layout_constraintWidth_percent=".8"
			/>
	</androidx.constraintlayout.widget.ConstraintLayout>

	<TextView
		android:id="@+id/add_eltasbe7"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/seb7a"
		app:layout_constraintStart_toStartOf="@id/seb7a"
		app:layout_constraintEnd_toEndOf="@id/seb7a"
		android:layout_marginTop="30dp"
		android:text="@string/add_eltsbe7"
		android:textSize="25sp"
		android:textStyle="bold"
		/>
	<TextView
		android:id="@+id/count_number"
		android:layout_width="70dp"
		android:layout_height="70dp"
		app:layout_constraintTop_toBottomOf="@id/add_eltasbe7"
		app:layout_constraintStart_toStartOf="@id/add_eltasbe7"
		app:layout_constraintEnd_toEndOf="@id/add_eltasbe7"
		android:layout_marginTop="20dp"
		android:text="@string/counternumber"
		android:textAlignment="gravity"
		android:gravity="center"
		android:textStyle="bold"
		android:textSize="25sp"
		android:background="@drawable/counter_bg"
		/>
	<TextView
		android:id="@+id/tsbeeha"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@id/count_number"
		app:layout_constraintStart_toStartOf="@id/count_number"
		app:layout_constraintEnd_toEndOf="@id/count_number"
		android:layout_marginTop="20dp"
		android:text="@string/tsbeha"
		android:textAlignment="gravity"
		android:gravity="center"
		android:textStyle="bold"
		android:textSize="25sp"
		android:background="@drawable/tsbeha_bg"
		android:padding="10dp"
		/>

















</androidx.constraintlayout.widget.ConstraintLayout>