<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/islami_bg">

    <ImageView
        android:id="@+id/head_sebha"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/head_sebha_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/body_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/body_sebha_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_sebha"
        android:layout_marginTop="-95dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عدد التسبيحات"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="390dp"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/tsbeeh_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="69dp"
        android:height="82dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="430dp"
        android:background="@drawable/bg_tsbeeh_counter"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/tsbeeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="137dp"
        android:height="51dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="520dp"
        android:background="@drawable/bg_tsbeeh"
        android:text="سبحان الله"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textFontWeight="400"
        />









</androidx.constraintlayout.widget.ConstraintLayout>
